{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server.js",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "PATCH",
                "OPTIONS"
            ]
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}